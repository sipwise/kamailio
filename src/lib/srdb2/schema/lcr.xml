<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE table PUBLIC "-//iptel.org//DTD DBSchema V1.0//EN"
  "http://iptel.org/dbschema/dtd/1.0/dbschema.dtd" [

<!ENTITY % entities SYSTEM "entities.xml">
%entities;

]>

<table>
  <name>lcr</name>
  <version>1</version>

  <column id="lcr.prefix">
	<name>prefix</name>
	<type>string</type>
	<size>16</size>
  </column>

  <column id="lcr.from_uri">
	<name>from_uri</name>
	<type>string</type>
	<default>%</default>
	<size>&uri_len;</size>
  </column>

  <column id="lcr.request_uri">
	<name>request_uri</name>
	<type>string</type>
	<default>%</default>
	<size>&uri_len;</size>
  </column>

  <column id="lcr.grp_id">
	<name>grp_id</name>
	<type>int</type>
	<null/>
  </column>

  <column>
	<name>priority</name>
	<type>int</type>
	<null/>
  </column>

  <index>
	<name>lcr_idx1</name>
	<colref linkend="lcr.prefix"/>
  </index>

  <index>
	<name>lcr_idx2</name>
	<colref linkend="lcr.from_uri"/>
  </index>

  <index>
	<name>lcr_idx3</name>
	<colref linkend="lcr.grp_id"/>
  </index>
</table>
