+	len++;
+
+	SCA_STR_APPEND(aor, domain);
+	len += domain->len;
+
+	if (!SCA_STR_EMPTY(port)) {
+		*(aor->s + len) = ':';
+		len += 1;
+
+		SCA_STR_APPEND(aor, port);
+		len += port->len;
+	}
+
+	return (aor->len);
+}
