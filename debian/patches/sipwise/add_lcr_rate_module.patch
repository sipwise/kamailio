+static void extract_ud(str *s, char **user, char **at, char **domain)
+{
+	*user = *at = *domain = NULL;
+	if(!s || !s->s || !*s->s)
+		return;
+	*user = s->s;
+	*at = strchr(*user, '@');
+	if(!*at)
+		return;
+	**at = '\0';
+	*domain = *at + 1;
+	if(!**domain)
+		*domain = NULL;
+}
