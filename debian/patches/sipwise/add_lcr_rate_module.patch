+static int peers_cmp(const void *aa, const void *bb)
+{
+	const struct peer *a = aa, *b = bb;
+
+	if(a->valid && !b->valid)
+		return 1;
+	if(!a->valid && b->valid)
+		return -1;
+	if(!a->valid && !b->valid)
+		return 0;
+
+	if(a->cost < b->cost)
+		return 1;
+	if(a->cost > b->cost)
+		return -1;
+
+	if(a->weight < b->weight)
+		return 1;
+	if(a->weight > b->weight)
+		return -1;
+
+	return 0;
+}
