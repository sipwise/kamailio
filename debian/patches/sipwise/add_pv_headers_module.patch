+int pv_split_values(str *s, char d[][header_value_size], int *d_size, int keep_spaces)
+{
+    char p;
+    int idx = 0, c_idx = 0;
+
+    *d_size = -1;
+
+    if (s == NULL || s->len == 0 || d == NULL) {
+        *d_size = 0;
+        return 1;
+    }
+
+    while (idx < s->len) {
+        strncpy(&p, s->s+idx++,1);
+        if (keep_spaces == 0 && strncmp(&p, " ", 1) == 0)
+            continue;
+        if (strncmp(&p, ",", 1) == 0) {
+            if (c_idx == 0)
+                continue;
+            if (c_idx+1 < header_value_size)
+                c_idx++;
+            d[*d_size][c_idx] = '\0';
+            c_idx = 0;
+            continue;
+        }
+        if (c_idx == 0)
+            (*d_size)++;
+        strncpy(&d[*d_size][c_idx++], &p, 1);
+    }
+
+    if (c_idx > 0) {
+        if (c_idx >= header_value_size)
+            c_idx--;
+        d[*d_size][c_idx] = '\0';
+    }
+
+    (*d_size)++;
+
+    return 1;
+}
