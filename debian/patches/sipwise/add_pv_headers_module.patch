+
+    if (hname == NULL || pv_fixup_svalue(msg, hname, &hname_s) < 0)
+        return -1;
+
+    if (hidx == NULL || pv_fixup_svalue(msg, hidx, &hidx_s) < 0)
+        return -1;
+    idx = atoi(hidx_s.s);
+
+    return pv_set_xavp(&xavp_name, &hname_s, NULL, idx, 0);
+}
