+int pv_str_copy(str *src, str *dst, unsigned int max_size)
+{
+    unsigned int src_len = src->len+1 >= max_size ? max_size-1 : src->len;
+
+    if (src == NULL || dst == NULL || src->len <= 0)
+        return -1;
+
+    memcpy(dst->s, src->s, src_len);
+    dst->s[src_len] = '\0';
+    dst->len = src_len;
+
+    return 1;
+}
