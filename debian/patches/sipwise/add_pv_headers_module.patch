+	sr_xavp_t *xavp = NULL;
+
+	if((xavp = pvh_xavp_new_value(name, val)) == NULL)
+		return -1;
+
+	if(*start == NULL) {
+		xavp->next = *start;
+		*start = xavp;
+		return 1;
+	}
+
+	last = *start;
+	while(last->next)
+		last = last->next;
+	last->next = xavp;
+
+	return 1;
