+	e = pkg_malloc(e_size);
+	if(e == NULL) {
+		PKG_MEM_ERROR;
+		return -1;
+	}
+	memset(e, 0, e_size);
+
+	if(pvh_str_new(&e->key, key->len + 1) < 0)
+		goto err;
+	pvh_str_copy(&e->key, key, key->len + 1);
