+
+    if (header_value_size == 0)
+    {
+        LM_ERR("header_value_size must be >=0\n");
+        return -1;
+    }
+
+    if (pv_split_values(&skip_headers_param, hdrs, &d_size) < 0)
+    {
+        LM_ERR("could not parse skip_headers param");
+        return -1;
+    }
+
+    if (str_hash_alloc(&skip_headers, d_size+1) < 0)
+    {
+        LM_ERR("memory allocation error\n");
+        return -1;
+    }
+    str_hash_init(&skip_headers);
+
+    for (idx=0;idx<d_size;idx++)
+    {
+        hname.s = hdrs[idx];
+        hname.len = strlen(hdrs[idx]);
+        if (pv_str_hash_add_key(&skip_headers, &hname) < 0)
+        {
+            LM_ERR("cannot add a hash key=>skip_headers");
+            return -1;
+        }
+    }
+
+    memset(hdrs, 0, sizeof(hdrs));
+    if (pv_split_values(&split_headers_param, hdrs, &d_size) < 0)
+    {
+        LM_ERR("could not parse split_headers param");
+        return -1;
+    }
+
