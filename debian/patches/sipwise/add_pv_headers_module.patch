+{
+	struct sip_msg *msg = NULL;
+
+	LM_DBG("params->branch: %d\n", params->branch);
+	if(params->t_rbuf) {
+		LM_DBG("T=(%p) T_branch:%d\n", params->t_rbuf->my_T,
+				params->t_rbuf->branch);
+	}
+
+	if(type & TMCB_RESPONSE_IN) {
+		msg = params->rpl;
+		pvh_reply_append();
+	} else if(type & TMCB_REQUEST_FWDED) {
+		msg = params->req;
+	} else if(type & (TMCB_ON_BRANCH_FAILURE | TMCB_RESPONSE_FWDED)) {
+		msg = params->rpl;
+	} else {
+		LM_ERR("unknown callback: %d\n", type);
+		return;
+	}
+
+	if(msg != NULL && msg != FAKED_REPLY)
+		pvh_apply_headers(msg, 1);
+
+	return;
+}
