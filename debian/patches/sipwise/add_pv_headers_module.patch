+		cnt = xavp_count(name, start);
+		idx = idx + cnt;
+		if(idx < 0)
+			return -1;
+	}
+	LM_DBG("xavp name: %.*s\n", name->len, name->s);
+	if(xavp_set_value(name, idx, val, start) == NULL)
+		return -1;
