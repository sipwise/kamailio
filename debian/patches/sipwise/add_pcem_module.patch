+static int free_acc_fixup(void** param, int param_no);
+*/
+
+
+static cmd_export_t cmds[] = {
+/*
+	{"pcem_test", (cmd_function)w_pkg_em_test, 1,
+		acc_fixup, free_acc_fixup,
+		ANY_ROUTE},
+*/
