+static int tcap_extract_f(sip_msg_t *msg, char *su, char *sq);
+static int inap_extract_f(sip_msg_t *msg, char *su, char *sq);
+static int isup_decode_number_f(sip_msg_t *msg, char *su, char *sq);
+
