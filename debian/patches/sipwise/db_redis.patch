+        }
+    }
+    if(con == NULL || con->id == NULL || con->con == NULL) {
+        LM_ERR("connection to server is null\n");
+        return -1;
+    }
+    if(CON_TABLE(_h)->s == NULL) {
+        LM_ERR("prefix (table) name not set\n");
+        return -1;
+    } else {
+        LM_DBG("inserting to prefix (table) '%.*s'\n",
+                CON_TABLE(_h)->len, CON_TABLE(_h)->s);
