+    }
+
+    db_redis_consume_replies(con);
+    return 0;
+
+error:
+    LM_ERR("failed to do the query\n");
+    if (free_op && query_ops) {
+        pkg_free(query_ops);
+    }
+    db_redis_key_free(&keys);
+    if (manual_keys) {
+        pkg_free(manual_keys);
+    }
+    db_redis_consume_replies(con);
+
+
+    return -1;
