+
+        }
+    }
+
+    return 0;
+err:
+    if (keyname.s) {
+        pkg_free(keyname.s);
+        keyname.s = NULL;
+    }
+    if (reply) {
+        db_redis_free_reply(&reply);
+    }
+    db_redis_key_free(query_keys);
+    if (*manual_keys) {
+        pkg_free(*manual_keys);
+        *manual_keys = NULL;
+    }
+    return -1;
+}
